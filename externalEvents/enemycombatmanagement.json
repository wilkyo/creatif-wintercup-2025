          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "CollisionNP"
              },
              "parameters": [
                "HeroAttackHitbox",
                "Enemy",
                "",
                "",
                ""
              ]
            },
            {
              "type": {
                "value": "AnimatableCapability::AnimatableBehavior::Name"
              },
              "parameters": [
                "Hero",
                "Animation",
                "=",
                "\"Attack\""
              ]
            },
            {
              "type": {
                "value": "Sprite"
              },
              "parameters": [
                "Hero",
                ">",
                "2"
              ]
            },
