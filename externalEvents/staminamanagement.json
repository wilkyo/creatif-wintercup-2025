{
  "associatedLayout": "Vania_Game",
  "name": "StaminaManagement",
  "events": [
    {
      "type": "BuiltinCommonInstructions::Comment",
      "color": {
        "b": 109,
        "g": 230,
        "r": 255,
        "textB": 0,
        "textG": 0,
        "textR": 0
      },
      "comment": "Stamina should be regenerate only:\nIf not currently dashing or dead.\nIf at less than the max stamina.\n\nStamina is regenerated by taking the current stamina and adding the stamina regen rate. This is wrapped in a clamp expression to avoid going under the minimum (0) or over the maximum (the Hero object variable heroMaxStam)\n"
    },
    {
      "type": "BuiltinCommonInstructions::Standard",
      "conditions": [
        {
          "type": {
            "inverted": true,
            "value": "StringObjectVariable"
          },
          "parameters": [
            "Hero",
            "heroFSM",
            "=",
            "\"Dash\""
          ]
        },
        {
          "type": {
            "inverted": true,
            "value": "StringObjectVariable"
          },
          "parameters": [
            "Hero",
            "heroFSM",
            "=",
            "\"Death\""
          ]
        },
        {
          "type": {
            "value": "NumberObjectVariable"
          },
          "parameters": [
            "Hero",
            "heroStam",
            "<",
            "Hero.heroMaxStam"
          ]
        }
      ],
      "actions": [
        {
          "type": {
            "value": "SetNumberObjectVariable"
          },
          "parameters": [
            "Hero",
            "heroStam",
            "=",
            "clamp(Hero.heroStam + Hero.heroStamRegen, 0, Hero.heroMaxStam)"
          ]
        }
      ]
    }
  ]
}