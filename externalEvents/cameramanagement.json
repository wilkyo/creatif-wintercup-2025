                  },
                  "parameters": [
                    "",
                    "HeroHitbox",
                    "CameraRoom.X()",
                    "CameraRoom.Y()",
                    "CameraRoom.X() + CameraRoom.Width()",
                    "CameraRoom.Y() + CameraRoom.Height()",
                    "yes",
                    "\"DashEffect\"",
                    "0"
                  ]
                },
                {
                  "type": {
                    "value": "FixCamera"
                  },
                  "parameters": [
                    "",
                    "HeroHitbox",
                    "CameraRoom.X()",
                    "CameraRoom.Y()",
                    "CameraRoom.X() + CameraRoom.Width()",
                    "CameraRoom.Y() + CameraRoom.Height()",
                    "yes",
                    "\"DeathEffect\"",
                    "0"
                  ]
                },
                {
                  "type": {
                    "value": "MettreXY"
                  },
                  "parameters": [
